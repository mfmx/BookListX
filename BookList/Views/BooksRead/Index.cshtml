@using Microsoft.AspNet.Identity
@using System.Security.Claims
@model IEnumerable<BookList.Models.DisplayBook>

@if (Request.IsAuthenticated)
{
    var identity = (ClaimsIdentity)User.Identity;
    var name = identity.FindFirstValue(ClaimTypes.GivenName) ?? identity.GetUserName();
    

<h2> @Html.DisplayName( name +"'s Read List")</h2>
    }
@{
    ViewBag.Title = "Index";
}



    <div>
        <h4>Books Read</h4>
    </div>

    <div class="RWButton">
        <div class="btn btn-danger enterCreateBook">
            @Html.ActionLink("Enter Book Read", "Create")
        </div>

        <div class="btn btn-danger enterCreateBook">
            @Html.ActionLink("Go to Wish List", "index", "WishList")
        </div>
        <div class="btn btn-danger enterCreateBook">
            @Html.ActionLink("Back to Book List", "DashBoard", "Home")
        </div>
    </div>


<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateEntered)
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEntered)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookReadID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BookReadID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookReadID })
                </td>
            </tr>
        }
    </table>
</div>

